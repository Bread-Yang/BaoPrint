<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewHolder"
            type="com.MDGround.HaiLanPrint.adapter.SelectedImageAdapter.ViewHolder"/>

        <variable
            name="image"
            type="com.MDGround.HaiLanPrint.models.MDImage"/>
    </data>

    <com.MDGround.HaiLanPrint.views.SquareRelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/margin_small_8"
            app:loadImageByMDImage="@{image}"/>

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="@{viewHolder::deleteImageAction}"
            android:padding="@dimen/margin_min_4"
            android:src="@drawable/bitmap_check_green"/>
    </com.MDGround.HaiLanPrint.views.SquareRelativeLayout>
</layout>