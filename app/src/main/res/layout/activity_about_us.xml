<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_90"
                android:layout_height="@dimen/size_90"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_64"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/logo"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="版本号： V2.3.3"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:onClick="toCallPhone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nume"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_44"
                    android:layout_marginRight="@dimen/size_44"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_16"
                    android:text="@string/hotline"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hotlineNume"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <View style="@style/DividerHorizontalMarginSytle"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:onClick="toUsWeb"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_44"
                    android:layout_marginRight="@dimen/size_44"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_16"
                    android:text="@string/www"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_realm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realmname"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <View style="@style/DividerHorizontalMarginSytle"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:orientation="horizontal">

                <TextView
                    android:onClick="toRegisterProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_44"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_16"
                    android:text="@string/term"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/margin_16"
                    android:src="@drawable/icon_neet" />
            </LinearLayout>

            <View style="@style/DividerHorizontalMarginSytle"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_44"
                android:onClick="toFeedBack"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_44"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_16"
                    android:text="@string/feedback"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/margin_16"
                    android:src="@drawable/icon_neet" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>