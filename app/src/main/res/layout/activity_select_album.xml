<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.MDGround.HaiLanPrint.activity.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/albumRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvChooseTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/choose_image_tips"/>

            <Button
                android:id="@+id/btnNextStep"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_big_32"
                android:background="@drawable/ripple_button_right_angle"
                android:gravity="center"
                android:onClick="nextStepAction"
                android:text="@string/next_step"
                android:textColor="@color/color_white"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/selectedImageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbars="none" />
    </LinearLayout>
</layout>