<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vic="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="creditInfo"
            type="com.MDGround.HaiLanPrint.models.UserIntegral" />

        <variable
            name="handler"
            type="com.MDGround.HaiLanPrint.activity.personalcenter.MyCreditActivity.BindHandler" />
    </data>

    <RelativeLayout
        style="@style/MediumLayoutStyle"
        android:onClick="@{handler::ClicEvent}">

        <TextView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/credits_deduction"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_6"
            android:text="@{creditInfo.createdTime}"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_12"
            tools:text="2015-10-1 10:27:09" />

        <TextView
            android:id="@+id/tvIntegral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_6"
            android:textColor="@color/color_0ec100"
            android:textSize="@dimen/text_size_20"
            tools:text="-333" />

    </RelativeLayout>

</layout>