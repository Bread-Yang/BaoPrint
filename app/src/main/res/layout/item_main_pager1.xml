<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handlers"
            type="com.MDGround.HaiLanPrint.activity.main.MainActivity.MainBindingEventHandler"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPhotoPrint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableTop="@drawable/icon_photo_home"
                android:gravity="center"
                android:onClick="@{handlers::toPhotoPrintChooseInchActivityAction}"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/print_photo"
                android:textColor="@color/color_666666"
                android:textSize="17sp"/>

            <Button
                android:id="@+id/btnPostcard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableTop="@drawable/icon_card_home"
                android:gravity="center"
                android:onClick="@{handlers::toPostcarActivityAction}"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/postcard"
                android:textColor="@color/color_666666"
                android:textSize="17sp"/>

            <Button
                android:id="@+id/btnMagazineBook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableTop="@drawable/icon_mz_home"
                android:gravity="center"
                android:onClick="@{handlers::toMagazineAlbumActivityAction}"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/magazine_album"
                android:textColor="@color/color_666666"
                android:textSize="17sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableTop="@drawable/icon_art_home"
                android:gravity="center"
                android:onClick="@{handlers::toArtAlbumActivityAction}"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/art_album"
                android:textColor="@color/color_666666"
                android:textSize="17sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableTop="@drawable/icon_art_home"
                android:gravity="center"
                android:onClick="@{handlers::toPictureFrameActivityAction}"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/picture_frame"
                android:textColor="@color/color_666666"
                android:textSize="17sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableTop="@drawable/icon_day_home"
                android:gravity="center"
                android:onClick="@{handlers::toCalendarActivityAction}"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/calendar"
                android:textColor="@color/color_666666"
                android:textSize="17sp"/>

        </LinearLayout>

    </LinearLayout>
</layout>