<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="worksInfo"
            type="com.MDGround.HaiLanPrint.models.WorksInfo"></variable>
        <variable
            name="showHeader"
            type="boolean"></variable>

        <import type="android.view.View"></import>
    </data>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/size_44"
           android:gravity="center_vertical"
           android:paddingLeft="@dimen/margin_10"

           android:background="@color/color_white"
           android:visibility="@{showHeader ? View.VISIBLE : View.GONE}"
           >
           <CheckBox

               style="@style/ClickableTextStyle"
               android:text="@{worksInfo.typeName}"
               android:layout_marginLeft="@dimen/margin_10"
               android:button="@drawable/selector_cb_bg_auto_login" />


       </LinearLayout>
       <View style="@style/DividerHorizontalStyle"
           android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_96"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_6"
        android:paddingLeft="10dp">


        <CheckBox
            style="@style/ClickableTextStyle"
            android:layout_gravity="center_vertical"
            android:button="@drawable/selector_cb_bg_auto_login"/>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_6"
            android:scaleType="centerCrop"
            app:loadImageByPhotoSID="@{worksInfo.photoCover}"
            tools:src="@drawable/bg_pic"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_worksname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/text_size_18"
                android:text="@{worksInfo.typeName}"
                tools:text="照片书"/>

            <TextView
                android:id="@+id/tv_worksSizee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_worksname"
                android:textSize="@dimen/text_size_16"
                tools:text="照片书10*23"/>

            <TextView
                android:id="@+id/tv_worksPice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/size_22"
                tools:text="照片书"/>
        </RelativeLayout>
    </LinearLayout>
   </LinearLayout>
</layout>
