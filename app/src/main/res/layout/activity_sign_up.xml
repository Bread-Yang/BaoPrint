<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="@dimen/margin_medium"
              tools:context=".activity.login.LoginActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_wechat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="vertical">

        <com.yideguan.imageprint.views.ClearEditText
            android:id="@+id/cet_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:background="@null"
            android:drawablePadding="@dimen/margin_normal"
            android:hint="@string/input_phone_number"
            android:inputType="text"
            android:longClickable="false"/>

        <com.yideguan.imageprint.views.ClearEditText
            android:id="@+id/cet_captcha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:background="@null"
            android:drawablePadding="@dimen/margin_normal"
            android:hint="@string/input_captcha"
            android:inputType="text"
            android:longClickable="false"/>


        <com.yideguan.imageprint.views.ClearEditText
            android:id="@+id/cet_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:background="@null"
            android:drawablePadding="@dimen/margin_normal"
            android:hint="@string/input_password"
            android:inputType="text"
            android:longClickable="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal">

        <TextView
            style="@style/NormalTextStyle"
            android:layout_alignParentRight="true"
            android:text="@string/agree_protocol_tips"/>

        <TextView
            style="@style/NormalTextStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:clickable="true"
            android:onClick="protocolAction"
            android:text="@string/hailan_protocol"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_normal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_big"
        android:gravity="center"
        android:onClick="nextStepAction"
        android:text="@string/next_step"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_max"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/NormalTextStyle"
            android:layout_alignParentRight="true"
            android:text="@string/has_account"/>

        <TextView
            style="@style/NormalTextStyle"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:clickable="true"
            android:onClick="loginAction"
            android:text="@string/login_immediately"/>

    </LinearLayout>


</LinearLayout>
