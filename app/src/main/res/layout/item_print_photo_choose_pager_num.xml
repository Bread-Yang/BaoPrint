<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.MDGround.HaiLanPrint.activity.photoprint.PrintPhotoChoosePaperNumActivity.PrintPhotoChoosePaperNumAdapter.BindingHolder"/>

        <variable
            name="image"
            type="com.MDGround.HaiLanPrint.models.MDImage"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_normal_12"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.MDGround.HaiLanPrint.views.SquareRelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/margin_small_8"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_wechat"
                app:loadImageByMDImage="@{image}"/>

        </com.MDGround.HaiLanPrint.views.SquareRelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivImage"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_small_8"
            android:layout_marginBottom="@dimen/margin_small_8"
            android:background="@drawable/shape_login_input_area_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bitmap_check_green"/>

            <TextView
                android:id="@+id/tvPrintNum"
                android:layout_width="wrap_content"
                android:text="@{image.photoCount}"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                tools:text="1"/>

            <ImageView
                android:id="@+id/ivAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/bitmap_check_green"/>
        </RelativeLayout>

    </LinearLayout>
</layout>