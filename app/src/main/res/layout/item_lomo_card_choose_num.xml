<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.MDGround.HaiLanPrint.activity.lomocard.LomoCardChooseNumActivity.BindingHandlers"/>

        <variable
            name="measurement"
            type="com.MDGround.HaiLanPrint.models.Measurement"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="@{handlers::toSelectImageActivityAction}">

        <TextView
            android:id="@+id/tvColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvImageCount"
            android:layout_alignLeft="@+id/tvImageCount"
            android:layout_centerVertical="true"
            android:text="@{measurement.title}"
            android:textColor="@color/color_black"
            tools:text="红色"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_toLeftOf="@+id/ivArrow"
            android:text='@{(measurement.price / 100) + "/" + measurement.priceDesc}'
            android:textColor="@color/color_f88e11"
            tools:text="0.5/张"/>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ssdk_oks_ptr_ptr"/>

    </RelativeLayout>
</layout>
