<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.MDGround.HaiLanPrint.activity.cloudphotos.CloudOverviewActivity.BindingHandler"/>

        <variable
            name="image"
            type="com.MDGround.HaiLanPrint.models.MDImage"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:onClick="@{handlers::toCloudDetailActivityAction}"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_8"
        android:paddingLeft="@dimen/margin_8"
        android:paddingRight="@dimen/margin_8"
        android:paddingTop="@dimen/margin_8">

        <RelativeLayout
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/bg_photo_selectphotos">

            <ImageView
                android:id="@+id/first_image"
                android:layout_width="@dimen/album_size"
                android:layout_height="@dimen/album_size"
                android:layout_centerInParent="true"
                app:loadImageByMDImage="@{image}"
                tools:src="@drawable/ic_placeholder"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAlbumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{image.shared ? @string/share_album : @string/personal_album}"
                tools:text="所有图片"/>

            <TextView
                android:id="@+id/tvImageCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/image_num(image.PhotoCount)}"
                tools:text="12 张"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivArrow"
            style="@style/Arrow"/>
    </LinearLayout>

</layout>
