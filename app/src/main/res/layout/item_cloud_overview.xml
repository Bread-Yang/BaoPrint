<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.MDGround.HaiLanPrint.activity.cloudphotos.CloudOverviewActivity.BindingHandler"/>

        <variable
            name="image"
            type="com.MDGround.HaiLanPrint.models.MDImage"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:onClick="@{handlers::toCloudDetailActivityAction}"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:loadImageByMDImage="@{image}"
            tools:src="@drawable/ic_wechat"/>

        <TextView
            android:id="@+id/tvAlbumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvImageCount"
            android:layout_alignLeft="@+id/tvImageCount"
            android:text="@{image.shared ? @string/share_album : @string/personal_album}"
            android:textColor="@color/color_white"
            tools:text="个人相册"/>

        <TextView
            android:id="@+id/tvImageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_normal_12"
            android:layout_marginLeft="@dimen/margin_normal_12"
            android:textColor="@color/color_white"
            android:text="@{@string/image_num(image.PhotoCount)}"
            tools:text="(2)"/>

    </RelativeLayout>
</layout>
