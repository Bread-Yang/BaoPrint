<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium_24">

        <com.yideguan.imageprint.views.ClearEditText
            android:id="@+id/cetName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:background="@null"
            android:drawablePadding="@dimen/margin_normal_12"
            android:hint="@string/input_name"
            android:inputType="text"
            android:longClickable="false"/>

        <com.yideguan.imageprint.views.ClearEditText
            android:id="@+id/cetChildName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:background="@null"
            android:hint="@string/input_child_name"
            android:drawablePadding="@dimen/margin_normal_12"
            android:inputType="text"
            android:longClickable="false"/>

        <TextView
            android:id="@+id/tvChildBirthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:background="@null"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/margin_normal_12"
            android:textSize="@dimen/text_big_18"
            android:hint="@string/choose_child_birthday"
            android:inputType="text"
            android:longClickable="false"/>

        <com.yideguan.imageprint.views.ClearEditText
            android:id="@+id/cetChildSchool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:background="@null"
            android:hint="@string/input_child_school"
            android:drawablePadding="@dimen/margin_normal_12"
            android:inputType="text"
            android:longClickable="false"/>

        <com.yideguan.imageprint.views.ClearEditText
            android:id="@+id/cetChildClass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:background="@null"
            android:hint="@string/input_child_class"
            android:drawablePadding="@dimen/margin_normal_12"
            android:inputType="text"
            android:longClickable="false"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_big_32"
            android:gravity="center"
            android:onClick="finishAction"
            android:text="@string/finish"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_max_20"/>
    </LinearLayout>
</layout>