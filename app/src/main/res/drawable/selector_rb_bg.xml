<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/color_white"/>
            <stroke android:width="1dp" android:color="@color/color_divider"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/color_fff7ed"/>
            <stroke android:width="1dp" android:color="@color/color_f88e11"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/color_white"/>
            <stroke android:width="1dp" android:color="@color/color_999999"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

</selector>